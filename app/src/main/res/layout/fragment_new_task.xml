        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task State"
            android:id="@+id/task_state_textview"
            app:layout_constraintTop_toBottomOf="@+id/priority_textview"
            app:layout_constraintStart_toStartOf="@+id/priority_textview"
            android:layout_marginTop="20dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_status_option"
            app:layout_constraintStart_toEndOf="@+id/task_state_textview"
            app:layout_constraintTop_toTopOf="@id/task_state_textview"
            app:layout_constraintBottom_toBottomOf="@+id/task_state_textview"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="complete"
                android:id="@+id/task_comlete_option"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not yet"
                android:id="@+id/task_not_yet_comlete_option"
                android:checked="true"
                />
        </RadioGroup>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/done_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="50dp"/>
