<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Divider style -->
    <style name="Widget.ToDo.Divider" parent="">
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>

    <!-- Text style to italic  -->
    <style name="italicText">
        <item name="android:textStyle">italic</item>
    </style>

    <!-- To Change menu icon -->
    <style name="Widget.ActionButton.ToDo" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_filter_list_24</item>
    </style>

    <!-- -->
    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/orange_light</item>
    </style>
    
    <!-- No action bar -->
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- CardView -->
    <style name="MyStyle.Cardview.Orange" parent="CardView">
        <item name="cardBackgroundColor">@color/white_dark</item>
        <item name="backgroundTint">@color/white_dark</item>
    </style>
</resources>